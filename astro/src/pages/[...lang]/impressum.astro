  <section class="section bg-white min-h-[60vh]">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <a href={localizedUrl('/', locale)} class="inline-flex items-center gap-2 text-bamboo-600 hover:text-bamboo-700 mb-6 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          {t.backLink}
        </a>

        <h1 class="text-3xl md:text-4xl font-heading font-bold text-bamboo-800 mb-8">{t.title}</h1>

        <div class="prose prose-lg prose-bamboo max-w-none">
          <h2>Angaben gemäß § 5 TMG</h2>
          
