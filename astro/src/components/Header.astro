---
import {
  navigation,
  localeNames,
  locales,
  localizedUrl,
  t,
  type Locale,
} from "../lib/i18n";
import { urlFor } from "../lib/sanity";

interface Props {
  locale: Locale;
  settings: any;
}

const { locale, settings } = Astro.props;
const navItems = navigation[locale];
const currentPath = Astro.url.pathname;

// Check if we are on a page that should have an opaque header from the start
const isStaticHeader = currentPath
  .split("/")
  .some((segment) =>
    ["history", "galerie", "datenschutz", "impressum"].includes(segment),
  );
---

<header
  id="main-header"
  class:list={[
    "fixed top-0 left-0 right-0 z-50 w-full transition-shadow duration-300",
    { scrolled: isStaticHeader },
  ]}
  transition:name="header"
>
  <div class="header-bg-layer absolute inset-0 pointer-events-none"></div>

  <div class="relative w-full px-6 md:px-12 lg:px-16 z-20">
    <nav
      class="flex items-center justify-between h-[var(--header-height-mobile)] md:h-[var(--header-height-desktop)]"
    >
      <!-- Logo -->
      <a href={localizedUrl("/", locale)} class="flex items-center gap-3 group">
        {
          settings?.logo ? (
            <img
              src={urlFor(settings.logo).width(48).url()}
              alt="Bamboo Shoots Logo"
              class="header-logo w-10 h-10 md:w-12 md:h-12 rounded-full group-hover:scale-105 transition-transform duration-300"
            />
          ) : (
            <div class="header-logo-box w-10 h-10 md:w-12 md:h-12 bg-primary rounded-full flex items-center justify-center text-white text-xl">
              <svg
                class="w-6 h-6 md:w-8 md:h-8"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5" />
              </svg>
            </div>
          )
        }
        <span
          class="header-text text-lg md:text-xl font-heading font-extrabold sm:block hidden tracking-tight"
        >
          {t(settings?.siteTitle, locale) || "Bamboo Shoots"}
        </span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-10">
        {
          navItems.map((item) => (
            <a
              href={localizedUrl(item.href, locale)}
              data-nav-link
              class="nav-link-dynamic font-medium relative py-2"
            >
              <span class="relative z-10 text-[10px] uppercase tracking-[0.2em] font-bold">
                {item.label}
              </span>
              <span class="nav-underline absolute bottom-0 left-0 w-0 h-0.5 bg-secondary transition-all duration-500" />
            </a>
          ))
        }
      </div>

      <!-- Language & Donate -->
      <div class="flex items-center gap-2 md:gap-8">
        <div class="relative group">
          <button
            class="lang-btn flex items-center gap-2 px-3 py-1.5 rounded-full hover:bg-white/10 transition-colors duration-300"
          >
            <svg
              class="w-4 h-4 opacity-70"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              ><circle cx="12" cy="12" r="10"></circle><line
                x1="2"
                y1="12"
                x2="22"
                y2="12"></line><path
                d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"
              ></path></svg
            >
            <span class="text-[10px] font-bold uppercase tracking-widest"
              >{localeNames[locale]}</span
            >
          </button>
          <div
            class="absolute right-0 top-full mt-2 py-2 bg-branding-dark rounded-xl shadow-2xl border-white/10 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300 min-w-[140px] translate-y-2 group-hover:translate-y-0"
          >
            {
              locales.map((loc) => (
                <a
                  href={localizedUrl(currentPath, loc)}
                  class={`block px-5 py-2.5 text-[10px] font-bold uppercase tracking-widest hover:bg-white/10 ${loc === locale ? "text-secondary" : "text-white/60"}`}
                >
                  {localeNames[loc]}
                </a>
              ))
            }
          </div>
        </div>

        <a
          href={localizedUrl("#spenden", locale)}
          class="btn-donate text-xs font-bold uppercase tracking-widest px-8 py-3 shadow-xl"
        >
          {t(settings?.labels?.navDonate, locale) || "Spenden"}
        </a>

        <button
          id="mobile-menu-btn"
          class="lg:hidden p-2 hover:text-secondary transition-colors"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path></svg
          >
        </button>
      </div>
    </nav>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="lg:hidden hidden border-t border-white/10 bg-branding-dark"
    >
      <div class="py-6 px-6 space-y-4">
        {
          navItems.map((item) => (
            <a
              href={localizedUrl(item.href, locale)}
              class="block py-3 px-4 text-white/80 hover:text-white hover:bg-white/5 rounded-xl transition-all duration-300 font-medium"
            >
              {item.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</header>
<style>
  /* 1. LAYER STYLING */
  .header-bg-layer {
    background-color: transparent;
    backdrop-filter: blur(0px) saturate(100%);
    border-bottom: 0px solid transparent;
    transition:
      background-color 0.5s,
      backdrop-filter 0.5s;
  }

  /* 2. CSS SCROLL TIMELINES (Modern Browsers) */
  @supports (animation-timeline: scroll()) {
    .header-bg-layer {
      animation: header-bg-fade linear both;
      animation-timeline: scroll();
      animation-range: 100px 500px;
    }

    .header-text,
    .nav-link-dynamic,
    .lang-btn,
    #mobile-menu-btn {
      animation: header-text-fade linear both;
      animation-timeline: scroll();
      animation-range: 100px 300px;
    }

    .header-logo {
      animation: header-logo-scale linear both;
      animation-timeline: scroll();
      animation-range: 100px 300px;
    }
  }

  /* 3. KEYFRAMES */
  @keyframes header-bg-fade {
    from {
      background-color: rgba(235, 230, 222, 0);
      backdrop-filter: blur(0px) saturate(100%);
      border-bottom-color: transparent;
    }
    to {
      background-color: rgba(235, 230, 222, 0.85);
      backdrop-filter: blur(20px) saturate(180%);
      border-bottom-color: rgba(0, 0, 0, 0.05);
    }
  }

  @keyframes header-text-fade {
    from {
      color: white;
      text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
    }
    to {
      color: #1a2b1f; /* branding-dark */
      text-shadow: 0 1px 3px rgba(0, 0, 0, 0);
    }
  }

  @keyframes header-logo-scale {
    from {
      filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
    }
    to {
      filter: drop-shadow(0 0px 0px rgba(0, 0, 0, 0));
    }
  }

  /* 4. FALLBACKS & STATIC PAGES */
  header.scrolled .header-bg-layer,
  header.scrolled-forced .header-bg-layer {
    background-color: rgba(235, 230, 222, 0.85) !important;
    backdrop-filter: blur(20px) saturate(180%) !important;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05) !important;
  }

  header.scrolled .header-text,
  header.scrolled-forced .header-text,
  header.scrolled .nav-link-dynamic,
  header.scrolled-forced .nav-link-dynamic,
  header.scrolled .lang-btn,
  header.scrolled-forced .lang-btn,
  header.scrolled #mobile-menu-btn {
    color: #1a2b1f !important;
    text-shadow: none !important;
  }

  /* Nav Highlighting */
  .nav-link-dynamic:hover .nav-underline,
  .nav-link-dynamic.active .nav-underline {
    width: 100%;
  }
  .nav-underline {
    transition: width 0.6s cubic-bezier(0.68, -0.6, 0.32, 1.6);
  }
</style>

<script>
  function initHeader() {
    const header = document.getElementById("main-header");
    const navLinks = document.querySelectorAll("[data-nav-link]");
    const mobileMenuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");

    if (!header) return;

    const handleScroll = () => {
      const scrollY = window.scrollY;
      const isStatic = window.location.pathname.match(
        /\/(history|galerie|datenschutz|impressum)/,
      );

      if (scrollY > 50 || isStatic) {
        header.classList.add("scrolled");
      } else {
        header.classList.remove("scrolled");
      }

      if (isStatic) {
        header.classList.add("scrolled-forced");
      } else {
        header.classList.remove("scrolled-forced");
      }
    };

    window.addEventListener("scroll", handleScroll, { passive: true });
    handleScroll();

    const sectionIds = ["mission", "programme", "team", "spenden", "besuchen"];
    const sectionObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const id = entry.target.id;
            navLinks.forEach((link) => {
              const href = link.getAttribute("href");
              if (href && href.includes(`#${id}`)) link.classList.add("active");
              else link.classList.remove("active");
            });
          }
        });
      },
      { rootMargin: "-150px 0px -70% 0px" },
    );

    sectionIds.forEach((id) => {
      const el = document.getElementById(id);
      if (el) sectionObserver.observe(el);
    });

    mobileMenuBtn?.addEventListener("click", () => {
      mobileMenu?.classList.toggle("hidden");
      if (!mobileMenu?.classList.contains("hidden")) {
        header.classList.add("scrolled-forced");
      } else {
        handleScroll();
      }
    });

    window.addEventListener(
      "scroll",
      () => {
        if (window.scrollY < 200)
          navLinks.forEach((l) => l.classList.remove("active"));
      },
      { passive: true },
    );
  }

  document.addEventListener("astro:page-load", initHeader);
</script>
