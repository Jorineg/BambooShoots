---
import { t, localizedUrl, type Locale } from "../lib/i18n";

interface Props {
  locale: Locale;
  settings: any;
}

const { locale, settings } = Astro.props;

const footerText = {
  de: {
    contact: "Kontakt",
    donate: "Spendenkonto",
    german: "Deutschland",
    cambodia: "Kambodscha",
    legal: "Rechtliches",
    imprint: "Impressum",
    privacy: "Datenschutz",
    nonprofit:
      "Der Verein ist als gemeinnützig anerkannt. Spendenbescheinigungen möglich.",
    followUs: "Folgen Sie uns",
    copyright: "© 2024 Bamboo Shoots e.V. – Bildung & Entwicklungshilfe",
  },
  en: {
    contact: "Contact",
    donate: "Donation Account",
    german: "Germany",
    cambodia: "Cambodia",
    legal: "Legal",
    imprint: "Imprint",
    privacy: "Privacy Policy",
    nonprofit:
      "The association is recognized as non-profit. Donation receipts available.",
    followUs: "Follow Us",
    copyright: "© 2024 Bamboo Shoots e.V. – Education & Development Aid",
  },
  kh: {
    contact: "ទំនាក់ទំនង",
    donate: "គណនីបរិច្ចាគ",
    german: "អាល្លឺម៉ង់",
    cambodia: "កម្ពុជា",
    legal: "ផ្លូវច្បាប់",
    imprint: "ព័ត៌មានច្បាប់",
    privacy: "គោលការណ៍ឯកជនភាព",
    nonprofit: "សមាគមត្រូវបានទទួលស្គាល់ថាមិនរកប្រាក់ចំណេញ។",
    followUs: "តាមដានយើង",
    copyright: "© ២០២៤ Bamboo Shoots e.V.",
  },
};

const text = footerText[locale];
---

<footer class="bg-branding-dark text-white font-sans">
  <div class="container-custom py-16 md:py-24 px-4 md:px-8">
    <div
      class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 md:gap-16"
    >
      <!-- Logo & Mission & Social -->
      <div class="space-y-8">
        <div>
          <div class="flex items-center gap-3 mb-4">
            <span class="text-2xl font-heading font-bold tracking-tight"
              >{t(settings?.siteTitle, locale) || "Bamboo Shoots"}</span
            >
          </div>
          <p class="text-white/60 text-sm leading-relaxed mb-6">
            {
              t(settings?.tagline, locale) ||
                (locale === "de"
                  ? "Time to grow – gemeinsam für die Zukunft der Kinder in Kambodscha."
                  : locale === "en"
                    ? "Time to grow – together for the future of children in Cambodia."
                    : "ពេលវេលាដើម្បីរីកចម្រើន – រួមគ្នាដើម្បីអនាគតរបស់កុមារក្នុងប្រទេសកម្ពុជា។")
            }
          </p>
        </div>

        <!-- Social Media moved here for better balance -->
        {
          (settings?.socialMedia?.facebook ||
            settings?.socialMedia?.instagram ||
            settings?.socialMedia?.youtube) && (
            <div>
              <h4 class="font-heading font-bold text-xs uppercase tracking-widest text-white/40 mb-4">
                {t(settings?.labels?.followUs, locale) || text.followUs}
              </h4>
              <div class="flex gap-4">
                {settings?.socialMedia?.facebook && (
                  <a
                    href={settings.socialMedia.facebook}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white/60 hover:text-white transition-all duration-300 hover:scale-110 active:scale-100"
                    aria-label="Facebook"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" />
                    </svg>
                  </a>
                )}
                {settings?.socialMedia?.instagram && (
                  <a
                    href={settings.socialMedia.instagram}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white/60 hover:text-white transition-all duration-300 hover:scale-110 active:scale-100"
                    aria-label="Instagram"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" />
                    </svg>
                  </a>
                )}
                {settings?.socialMedia?.youtube && (
                  <a
                    href={settings.socialMedia.youtube}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-white/60 hover:text-white transition-all duration-300 hover:scale-110 active:scale-100"
                    aria-label="YouTube"
                  >
                    <svg
                      class="w-6 h-6"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          )
        }
      </div>

      <!-- Contact Germany -->
      <div>
        <h3
          class="font-heading font-bold text-xs uppercase tracking-widest text-white/40 mb-6"
        >
          {t(settings?.labels?.contact, locale) || text.contact}
        </h3>
        <address class="not-italic text-white/60 text-sm space-y-3">
          <p class="font-semibold text-white text-base">Bamboo Shoots e.V.</p>
          <p>Hohenzollernring 18a<br />13585 Berlin</p>
          <a
            href={`mailto:${settings?.contactEmail || "info@bamboo-shoots.de"}`}
            class="inline-block text-white/50 hover:text-white transition-all duration-300 pt-1 border-b border-white/10"
          >
            {settings?.contactEmail || "info@bamboo-shoots.de"}
          </a>
        </address>
      </div>

      <!-- Donation Account (Simplified for balance) -->
      <div>
        <h3
          class="font-heading font-bold text-xs uppercase tracking-widest text-white/40 mb-6"
        >
          {t(settings?.labels?.donateAccount, locale) || text.donate}
        </h3>
        <div class="text-white/60 text-sm space-y-3">
          {
            settings?.bankAccount?.[locale] ? (
              <>
                <p class="font-semibold text-white text-base">
                  {settings.bankAccount[locale].name}
                </p>
                <p>{settings.bankAccount[locale].bank}</p>
                <p class="whitespace-nowrap">
                  {settings.bankAccount[locale].iban}
                </p>
                <p class="text-xs">BIC: {settings.bankAccount[locale].bic}</p>
              </>
            ) : (
              <>
                <p class="font-semibold text-white text-base">
                  {settings?.bankAccount?.name || "Bamboo Shoots e.V."}
                </p>
                <p>{settings?.bankAccount?.bank || "GLS Bank eG"}</p>
                <p class="whitespace-nowrap">
                  {settings?.bankAccount?.iban || "DE31 4306 0967 1119 0524 00"}
                </p>
                <p class="text-xs">
                  BIC: {settings?.bankAccount?.bic || "GENODEM1GLS"}
                </p>
              </>
            )
          }
        </div>
      </div>

      <!-- Legal Links -->
      <div>
        <h3
          class="font-heading font-bold text-xs uppercase tracking-widest text-white/40 mb-6"
        >
          {t(settings?.labels?.legal, locale) || text.legal}
        </h3>
        <ul class="space-y-4 text-sm font-medium">
          <li>
            <a
              href={localizedUrl("/impressum", locale)}
              class="text-white/60 hover:text-white transition-all duration-300 hover:translate-x-1 inline-block"
            >
              {t(settings?.labels?.imprint, locale) || text.imprint}
            </a>
          </li>
          <li>
            <a
              href={localizedUrl("/datenschutz", locale)}
              class="text-white/60 hover:text-white transition-all duration-300 hover:translate-x-1 inline-block"
            >
              {t(settings?.labels?.privacy, locale) || text.privacy}
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Extra Info Row (To balance the main columns) -->
    <div
      class="mt-20 pt-8 border-t border-white/10 flex flex-col md:flex-row justify-between items-start md:items-center gap-6"
    >
      <div class="max-w-2xl">
        <p
          class="text-xs text-white/40 leading-relaxed uppercase tracking-wide"
        >
          {t(settings?.labels?.nonprofit, locale) || text.nonprofit}
          {
            settings?.bankAccount?.[locale]?.note && (
              <span class="block mt-1 normal-case italic">
                — {settings.bankAccount[locale].note}
              </span>
            )
          }
        </p>
      </div>
      <div class="text-white/30 text-xs font-medium whitespace-nowrap">
        {t(settings?.labels?.copyright, locale) || text.copyright}
      </div>
    </div>
  </div>
</footer>
