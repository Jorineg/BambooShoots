---
import { t, type Locale } from "../../lib/i18n";

interface Props {
  locale: Locale;
  welcomeData: any;
  missionData: any;
}

const { locale, welcomeData, missionData } = Astro.props;

const cambodianProverb = {
  de: "Kinder sind wie Bambussprossen – sie wachsen mit der richtigen Pflege stark heran.",
  en: "Children are like bamboo shoots – with the right care, they grow up strong.",
  kh: "កុមារប្រៀបដូចជាទំពាំង – បើមានការថែទាំត្រឹមត្រូវ វានឹងលូតលាស់យ៉ាងរឹងមាំ។",
};

const quote =
  t(missionData?.quote, locale) ||
  cambodianProverb[locale as keyof typeof cambodianProverb] ||
  cambodianProverb.de;
---

<section
  id="mission"
  class="section bg-earth-50 relative overflow-hidden py-32 md:py-48"
>
  <!-- Background Decorations -->
  <div
    class="absolute top-0 right-0 w-[800px] h-[800px] bg-primary/5 rounded-full blur-[120px] -translate-y-1/2 translate-x-1/3 pointer-events-none"
  >
  </div>

  <!-- Subtle Bamboo Leaf Pattern (SVG) -->
  <div class="absolute inset-0 opacity-[0.03] pointer-events-none">
    <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern
          id="bamboo-pattern"
          x="0"
          y="0"
          width="400"
          height="400"
          patternUnits="userSpaceOnUse"
        >
          <path d="M100 50 Q120 100 100 150 Q80 100 100 50" fill="currentColor"
          ></path>
          <path
            d="M300 200 Q320 250 300 300 Q280 250 300 200"
            fill="currentColor"
            transform="rotate(45 300 250)"></path>
          <path
            d="M50 300 Q70 350 50 400 Q30 350 50 300"
            fill="currentColor"
            transform="rotate(-20 50 350)"></path>
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#bamboo-pattern)"></rect>
    </svg>
  </div>

  <div class="container-custom relative z-10">
    <div class="flex flex-col lg:flex-row items-center gap-16 lg:gap-24">
      <!-- Left Side: Typography Focus (The Proverb) -->
      <div class="w-full lg:w-5/12 reveal">
        <div class="relative">
          <!-- Quote Icon Decorative -->
          <span
            class="absolute -top-12 -left-8 text-[12rem] font-serif text-primary/10 leading-none select-none"
            >“</span
          >

          <h2
            class="text-4xl md:text-5xl lg:text-6xl font-heading font-extrabold text-branding-dark leading-[1.1] mb-6 tracking-tighter"
          >
            {
              locale === "de"
                ? "Bildung verändert Leben."
                : locale === "en"
                  ? "Education changes lives."
                  : "ការអប់រំផ្លាស់ប្តូរជីវិត។"
            }
          </h2>

          <p
            class="text-3xl md:text-4xl lg:text-5xl font-cursive text-primary/80 leading-snug tracking-tight"
          >
            "{quote}"
          </p>

          <div class="mt-8 flex items-center gap-4">
            <div class="w-12 h-[2px] bg-secondary/30"></div>
            <span
              class="text-sm font-bold uppercase tracking-widest text-secondary/60"
            >
              {
                locale === "de"
                  ? "Kambodschanisches Sprichwort"
                  : locale === "en"
                    ? "Cambodian Proverb"
                    : "សុភាសិតខ្មែរ"
              }
            </span>
          </div>
        </div>
      </div>

      <!-- Right Side: Content Card (The Mission/Welcome) -->
      <div class="w-full lg:w-7/12 reveal reveal-delay-200">
        <div
          class="glass p-8 md:p-16 rounded-[3rem] border border-white/40 shadow-2xl relative overflow-hidden group"
        >
          <!-- Card Decorative Gradient -->
          <div
            class="absolute -top-24 -right-24 w-64 h-64 bg-secondary/5 rounded-full blur-3xl group-hover:bg-secondary/10 transition-colors duration-700"
          >
          </div>

          <div class="relative z-10">
            <h3 class="text-xl md:text-2xl font-bold text-branding-dark mb-10">
              {
                t(welcomeData?.greeting, locale) ||
                  (locale === "de" ? "Willkommen" : "Welcome")
              }
            </h3>

            <div class="space-y-6">
              {
                t(welcomeData?.text, locale) && (
                  <p class="text-lg md:text-xl text-branding-muted leading-relaxed font-light">
                    {t(welcomeData?.text, locale)}
                  </p>
                )
              }

              {
                t(missionData?.text, locale) &&
                  t(missionData?.text, locale) !==
                    t(welcomeData?.text, locale) && (
                    <p class="text-lg md:text-xl text-branding-muted leading-relaxed font-light">
                      {t(missionData?.text, locale)}
                    </p>
                  )
              }

              <!-- Impact Badges -->
              <div
                class="pt-12 grid grid-cols-3 gap-0 border-t border-branding-dark/10"
              >
                <div class="flex flex-col items-center text-center px-4">
                  <span
                    class="text-3xl md:text-4xl font-heading font-extrabold text-primary mb-1"
                    >2006</span
                  >
                  <span
                    class="text-[10px] md:text-xs uppercase tracking-wider text-branding-muted font-bold whitespace-nowrap"
                    >{locale === "de" ? "Aktiv seit" : "Active since"}</span
                  >
                </div>

                <div
                  class="flex flex-col items-center text-center px-4 border-l border-branding-dark/10"
                >
                  <span
                    class="text-3xl md:text-4xl font-heading font-extrabold text-primary mb-1"
                    >250+</span
                  >
                  <span
                    class="text-[10px] md:text-xs uppercase tracking-wider text-branding-muted font-bold whitespace-nowrap"
                    >{
                      locale === "de" ? "Kinder regulär" : "Regular students"
                    }</span
                  >
                </div>

                <div
                  class="flex flex-col items-center text-center px-4 border-l border-branding-dark/10"
                >
                  <span
                    class="text-3xl md:text-4xl font-heading font-extrabold text-primary mb-1"
                    >100%</span
                  >
                  <span
                    class="text-[10px] md:text-xs uppercase tracking-wider text-branding-muted font-bold whitespace-nowrap"
                    >{locale === "de" ? "Lokales Team" : "Local Team"}</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  const observerOptions = {
    threshold: 0.1,
    rootMargin: "0px 0px -50px 0px",
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add("visible");
      }
    });
  }, observerOptions);

  document.querySelectorAll(".reveal").forEach((el) => observer.observe(el));
</script>
