---
import { t, type Locale } from '../../lib/i18n';

interface Props {
  locale: Locale;
  data: any;
}

const { locale, data } = Astro.props;

const defaultTitle = { de: 'Besuchen Sie uns', en: 'Visit Us', kh: 'មកលេងយើង' };
const defaultText = { 
  de: 'Sie sind herzlich eingeladen, uns in Siem Reap zu besuchen! Bitte kontaktieren Sie uns vorab, damit wir Zeit für Sie einplanen können.',
  en: 'You are warmly invited to visit us in Siem Reap! Please contact us in advance so we can plan time for you.',
  kh: 'យើងសូមអញ្ជើញអ្នកមកលេងយើងនៅខេត្តសៀមរាប! សូមទាក់ទងមកយើងខ្ញុំជាមុន។'
};
---

<section id="besuchen" class="py-32 md:py-48 bg-branding-bg overflow-hidden">
  <div class="container-custom">
    <div class="flex flex-col lg:flex-row items-start gap-16 md:gap-24">
      <!-- Content -->
      <div class="w-full lg:w-3/5 reveal border-l-[3px] border-primary/20 pl-8 md:pl-16">
        <h2 class="text-[10px] md:text-xs uppercase tracking-[0.5em] font-bold text-primary mb-10 opacity-60">
          {locale === 'de' ? 'Vor Ort' : locale === 'en' ? 'On Site' : 'នៅកន្លែង'}
        </h2>
        <h3 class="text-4xl md:text-6xl font-heading font-extrabold text-branding-dark mb-10 tracking-tighter">
          {t(data?.title || defaultTitle, locale)}
        </h3>
        <p class="text-branding-muted text-lg md:text-xl font-light leading-relaxed max-w-2xl mb-12">
          {t(data?.text || defaultText, locale)}
        </p>
        
        <div class="flex flex-wrap gap-6">
            <a 
              href="mailto:info@bambooshoots.org" 
              class="btn-primary group"
            >
              <span>{locale === 'de' ? 'Nachricht senden' : locale === 'en' ? 'Send Message' : 'ផ្ញើសារ'}</span>
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </a>
        </div>
      </div>

      <!-- Contact Info Card -->
      <div class="w-full lg:w-2/5 reveal reveal-delay-200">
        <div class="bg-white rounded-[2.5rem] p-10 md:p-12 border border-black/5 shadow-2xl relative overflow-hidden group">
            <div class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-bl-full -mr-16 -mt-16 group-hover:scale-150 transition-transform duration-700"></div>
            
            <h4 class="text-2xl font-heading font-extrabold text-branding-dark mb-10 tracking-tight">Siem Reap Office</h4>
            
            <div class="space-y-8">
                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-branding-accent flex items-center justify-center text-primary flex-shrink-0">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
                    </div>
                    <div>
                        <p class="text-[10px] uppercase font-bold tracking-widest text-primary/40 mb-1">Standort</p>
                        <p class="text-branding-muted font-light leading-relaxed">Near West Baray,<br/>Siem Reap, Cambodia</p>
                    </div>
                </div>

                <div class="flex items-start gap-4">
                    <div class="w-10 h-10 rounded-xl bg-branding-accent flex items-center justify-center text-primary flex-shrink-0">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
                    </div>
                    <div>
                        <p class="text-[10px] uppercase font-bold tracking-widest text-primary/40 mb-1">Telefon</p>
                        <p class="text-branding-muted font-light">+855 12 345 678</p>
                    </div>
                </div>
            </div>
            
            <div class="mt-12 pt-8 border-t border-black/5">
                <p class="text-[10px] uppercase font-bold tracking-widest text-secondary mb-4 italic">
                    {locale === 'de' ? 'Wir freuen uns auf Sie!' : 'We look forward to seeing you!'}
                </p>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
