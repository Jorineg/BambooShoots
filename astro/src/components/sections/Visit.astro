---
import { t, type Locale } from "../../lib/i18n";

interface Props {
  locale: Locale;
  data: any;
}

const { locale, data } = Astro.props;

const defaultTitle = { de: "Besuchen Sie uns", en: "Visit Us", kh: "មកលេងយើង" };
const defaultText = {
  de: "Sie sind herzlich eingeladen, uns in Siem Reap zu besuchen! Bitte kontaktieren Sie uns vorab, damit wir Zeit für Sie einplanen können.",
  en: "You are warmly invited to visit us in Siem Reap! Please contact us in advance so we can plan time for you.",
  kh: "យើងសូមអញ្ជើញអ្នកមកលេងយើងនៅខេត្តសៀមរាប! សូមទាក់ទងមកយើងខ្ញុំជាមុន។",
};
---

<section id="besuchen" class="py-16 md:py-48 bg-branding-bg overflow-hidden">
  <div class="container-custom">
    <div class="flex flex-col lg:flex-row items-start gap-12 md:gap-24">
      <!-- Content -->
      <div
        class="w-full lg:w-3/5 reveal border-l-[3px] border-primary/20 pl-6 md:pl-16"
      >
        <h3
          class="text-4xl md:text-6xl font-heading font-extrabold text-branding-dark mb-10 tracking-tight"
        >
          {t(data?.title || defaultTitle, locale)}
        </h3>
        <p
          class="text-branding-muted text-lg md:text-2xl font-light leading-relaxed max-w-2xl mb-12"
        >
          {t(data?.text || defaultText, locale)}
        </p>

        <div class="flex flex-wrap gap-6">
          <a href="mailto:info@bambooshoots.org" class="btn-primary group">
            <span
              >{
                t(data?.labels?.sendMessage, locale) ||
                  (locale === "de"
                    ? "Nachricht senden"
                    : locale === "en"
                      ? "Send Message"
                      : "ផ្ញើសារ")
              }</span
            >
          </a>
        </div>
      </div>

      <!-- Contact Info Card -->
      <div class="w-full lg:w-2/5 reveal reveal-delay-200">
        <div
          class="bg-white rounded-[2rem] md:rounded-[2.5rem] p-8 md:p-12 border border-black/5 shadow-2xl relative overflow-hidden group"
        >
          <div
            class="absolute top-0 right-0 w-32 h-32 bg-primary/5 rounded-bl-full -mr-16 -mt-16 group-hover:scale-150 transition-transform duration-700"
          >
          </div>

          <h4
            class="text-2xl font-heading font-extrabold text-branding-dark mb-10 tracking-tight"
          >
            {t(data?.officeTitle, locale) || "Siem Reap Office"}
          </h4>

          <div class="space-y-8">
            <div class="flex items-start gap-4">
              <div
                class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"
              >
              </div>
              <div>
                <p
                  class="text-[10px] uppercase font-bold tracking-[0.2em] text-primary/40 mb-1"
                >
                  {
                    t(data?.locationLabel, locale) ||
                      (locale === "de" ? "Standort" : "Location")
                  }
                </p>
                <div
                  class="text-branding-muted font-light leading-relaxed whitespace-pre-line"
                >
                  {
                    t(data?.locationValue, locale) ||
                      "Near West Baray,\nSiem Reap, Cambodia"
                  }
                </div>
                {data?.googleMapsUrl && (
                  <a
                    href={data.googleMapsUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-2 mt-3 text-sm text-primary hover:text-primary/80 transition-colors font-medium"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                      <circle cx="12" cy="10" r="3"></circle>
                    </svg>
                    <span>{locale === "de" ? "Auf Google Maps öffnen" : locale === "kh" ? "បើកក្នុង Google Maps" : "Open in Google Maps"}</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3 h-3" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
                      <polyline points="15 3 21 3 21 9"></polyline>
                      <line x1="10" y1="14" x2="21" y2="3"></line>
                    </svg>
                  </a>
                )}
              </div>
            </div>

            <div class="flex items-start gap-4">
              <div
                class="w-1.5 h-1.5 rounded-full bg-primary mt-2 flex-shrink-0"
              >
              </div>
              <div>
                <p
                  class="text-[10px] uppercase font-bold tracking-[0.2em] text-primary/40 mb-1"
                >
                  {
                    t(data?.phoneLabel, locale) ||
                      (locale === "de" ? "Telefon" : "Phone")
                  }
                </p>
                <a 
                  href={`tel:${(data?.phoneValue || "+855 12 345 678").replace(/\s/g, '')}`}
                  class="text-branding-muted font-light hover:text-primary transition-colors"
                >
                  {data?.phoneValue || "+855 12 345 678"}
                </a>
              </div>
            </div>
          </div>

          <div class="mt-12 pt-8 border-t border-black/5">
            <p
              class="text-[10px] uppercase font-bold tracking-widest text-secondary mb-4 italic"
            >
              {
                t(data?.footerText, locale) ||
                  (locale === "de"
                    ? "Wir freuen uns auf Sie!"
                    : "We look forward to seeing you!")
              }
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
