---
import { t, type Locale } from '../../lib/i18n';

interface Props {
  locale: Locale;
  data: any;
}

const { locale, data } = Astro.props;
---

<section id="willkommen" class="section bg-white">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row gap-12 items-center">
        <!-- Icon/Visual Column -->
        <div class="flex-shrink-0">
          <div class="w-24 h-24 md:w-32 md:h-32 rounded-[2rem] bg-earth-50 border border-earth-100 flex items-center justify-center text-earth-600 shadow-sm">
            <svg class="w-12 h-12 md:w-16 md:h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
        </div>

        <!-- Content Column -->
        <div class="text-center md:text-left">
          <h2 class="text-3xl md:text-4xl font-heading font-bold text-bamboo-800 mb-6">
            {t(data?.greeting, locale) || (locale === 'de' ? 'Unsere Geschichte' : locale === 'en' ? 'Our History' : 'ប្រវត្តិរបស់យើង')}
          </h2>
          <div class="section-divider mb-8 md:mx-0"></div>
            <p>
              {t(data?.text, locale) || (locale === 'de'
                ? 'Wir sind eine kambodschanische Nichtregierungsorganisation (NGO), die seit 2006 Kindern und Familien in ländlichen Regionen bei Siem Reap Bildung, Betreuung und praktische Unterstützung bietet.'
                : locale === 'en'
                ? 'We are a Cambodian non-governmental organization (NGO) that has been providing education, care and practical support to children and families in rural areas near Siem Reap since 2006.'
                : 'យើងជាអង្គការមិនមែនរដ្ឋាភិបាលកម្ពុជា (NGO) ដែលបានផ្តល់ការអប់រំ ការថែរក្សា និងការគាំទ្រជាក់ស្តែងដល់កុមារ និងគ្រួសារនៅតំបន់ជនបទជុំវិញសៀមរាប ចាប់តាំងពីឆ្នាំ 2006។')}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
